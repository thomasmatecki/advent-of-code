{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Module",
            "type": "debugpy",
            "request": "launch",
            "module": "${workspaceFolderBasename}",
            "cwd": "${workspaceFolder}/2024"
        },
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Zig Debug Test",
            "program": "${workspaceFolder}/2019/zig-out/bin/${fileBasenameNoExtension}test",
            "args": [],
            "cwd": "${workspaceFolder}/2019",
            "preLaunchTask": "build zig test"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Zig Debug Exec",
            "program": "${workspaceFolder}/2025/zig-out/bin/${fileBasenameNoExtension}",
            "args": [],
            "cwd": "${workspaceFolder}/2025",
            "preLaunchTask": "build zig exe",
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Zig Debug Main (2019)",
            "program": "${workspaceFolder}/2019/zig-out/bin/2019",
            "args": [],
            "cwd": "${workspaceFolder}/2019",
            "preLaunchTask": "build main",
        },
        {
            "name": "Launch Package",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${fileDirname}",
            "buildFlags": "-buildvcs=false"
        }
    ]
}